structure Ref : REF =
  struct

    datatype ref = datatype ref

    val ! = !
    val op := = op :=

    fun exchange (r as ref x, y) = (r := y; x)
    fun swap (rx as ref x, ry as ref y) = (rx := y; ry := x)

    fun app f (ref x) = f x

    fun map f (ref x) = ref (f x)

    fun modify f (r as ref x) = r := f x

  end
